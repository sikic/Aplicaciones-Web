<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" href="img/konoha.png">
    <title>Gestor de Tareas</title>
    <link rel="stylesheet" href="css/tasksScreen.css" media="screen">
    <link rel="stylesheet" href="css/tasksPrint.css" media="print">

</head>

<body>
    <div class="titulo">
        <h1>Tareas</h1>
    </div>

    <header>
        <div class="logo">

        </div>
        <div class="conexion">
            <div class="foto">

            </div>
            <div class="letras">
                <h3>usuario@ucm.com</h3>
                <a href=""> DESCONECTAR </a>
            </div>
        </div>

    </header>
    <main>

        <ul>
            <% if(listaTareas.length != 0){ %>
                <% listaTareas.forEach(function(elm){ %>

                    <% if(elm.done == false){ %>
                    <li class="tarea">
                        <div class="letraytarea">
                            <div>
                                <h2><%= elm.text %></h2>
                            </div>

                            <div class="etiquetas">
                                <% elm.tag.forEach(function(t){ %>
                                    <a href="" class="tags">
                                        <span>(</span> <%= t %> <span>)</span>
                                    </a>
                                <% }); %>
                            </div>

                        </div>

                        <a href="/finish/<%= elm.id %>" class="marcar">MARCAR FINALIZADA</a>
                    </li>
                    <% } %>
                    <% if(elm.done == true){ %>
                    <li class="tarea terminada">
                        <h2> <%= elm.text %></h2>
                    </li>
                    <% } %>
                <% }); %>
            <% } %>

            <li class="formulario">
                <form action="/addTask" method="post">
                    <div class="texto">
                        <input type="text" name="nombre">
                    </div>

                    <div class="ok">
                        <input type="submit" value="AÃ±adir">
                    </div>
                </form>
            </li>

            <li class="eliminar">
                <a href="/deleteCompleted">ELIMINAR TAREAS COMPLETADAS</a>
            </li>
        </ul>


    </main>

</body>

</html>